<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PSVHailingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/common_color_accent</item>
        <item name="colorPrimaryVariant">@color/pwd_color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/psv_color_accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.PSVHailingApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DriverDetails" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/psv_color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/psv_color_accent</item>
        <item name="colorError">@color/pwd_color_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pwd_color_accent</item>
        <item name="colorSecondaryVariant">@color/pwd_color_accent</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>
    <style name="Theme.DialogBox" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/psv_color_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/psv_color_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pwd_color_accent</item>
    </style>
</resources>